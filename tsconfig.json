{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,

    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,

    "outDir": "./build",
    "rootDir": "./src",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@utils/*": ["utils/*"],
      "#settings/*": ["./settings/*"],
      "#functions/*": ["./functions/*"],
      "#database": ["./database/index.ts"],
      "#schemas/*": ["./database/schemas/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
